<!-- Edit url modal -->
<div class="modal fade" tabindex="-1" role="dialog" id="editUrlsModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Edit URL</h4>
            </div>
            <form class="form-horizontal" method="post" action="/admin/urls/edit">
                <input type="hidden" class="form-control" id="edit-id" name="id" required="required">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="name" class="col-sm-4 control-label">URL address</label>
                        <div class="col-sm-8">
                            <input type="url" class="form-control" id="edit-url" name="url" placeholder="URL address" required="required">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Save changes</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->