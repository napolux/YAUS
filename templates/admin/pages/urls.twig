{# admin.hp #}
{% include 'admin/common/header.twig' %}

{% include 'admin/common/menu.twig' %}

<div class="container-fluid">
    <div class="row">
        {% include 'admin/common/sidebar.twig' %}
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
            <h1 class="page-header">URLs</h1>
            {% include 'admin/common/message.twig' %}
            <h2 class="sub-header">Insert new URL</h2>
            <form class="form-horizontal" method="post" action="/admin/urls/add">
                <div class="form-group">
                    <label for="name" class="col-sm-2 control-label">URL address</label>
                    <div class="col-sm-10">
                        <input class="form-control" id="url" name="url" placeholder="URL address" required="required" type="url">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Save</button>
                        <button type="reset" class="btn btn-reset"><i class="fa fa-trash"></i> Reset</button>
                    </div>
                </div>
            </form>
            <h2 class="sub-header">List of URLs</h2>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Visits</th>
                            <th>Short URL</th>
                            <th>URL</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for url in urls %}
                            <tr>
                                <td width="30" align="right">{{ url.visits }}</td>
                                <td><code>{{ url.shortUrl }}</code></td>
                                <td><code>{{ url.url }}</code></td>
                                <td width="10%">
                                    <a href="#" class="btn btn-primary btn-info btn-block" role="button" data-toggle="modal" data-target="#editUrlsModal" data-url-id="{{ url.id }}"><i class="fa fa-pencil"></i> Edit</a>
                                    <a href="urls/delete/{{ url.id }}" class="btn btn-primary btn-danger btn-block" role="button"><i class="fa fa-trash"></i> Delete</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% include 'admin/common/paginator.twig' %}
        </div>
    </div>
</div>

{% include 'admin/modals/urls.twig' %}
{% include 'admin/common/footer.twig' %}
